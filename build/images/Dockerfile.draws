FROM golang:1.17-alpine AS builder

RUN apk update && apk upgrade && \
    apk add --no-cache git

RUN mkdir /app
COPY . /app

WORKDIR /app

RUN go mod download

WORKDIR draws
RUN CGO_ENABLED=0 go build -o ./ems-draws ./cmd/draws/main.go

# Run container
FROM alpine:latest

RUN apk --no-cache add ca-certificates

RUN mkdir /app
WORKDIR /app
COPY --from=builder /app/draws/ems-draws .

CMD ["./ems-draws", "server"]